	href="{{ href }}"
	{{ attributes ? attributes | map( ( value, key ) => "#{key}=\"#{value}\"" ) | join( ' ' ) | raw }}
>
	{{- include( 'components/image.html.twig', { image: thumbnail, size: size | default( 'thumbnail' ) }, with_context = false ) -}}
</a>
